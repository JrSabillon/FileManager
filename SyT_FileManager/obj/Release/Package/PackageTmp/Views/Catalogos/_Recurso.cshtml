@model SyT_FileManager.Models.RecursoItem

@using (Html.BeginForm("_Recurso", "Catalogos", FormMethod.Post))
{
    @Html.HiddenFor(model => model.RecursoID)
    @Html.Hidden("ActionType")

    <div class="modal fade" id="modal-recurso" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-recurso-title">Recurso</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.RecursoItemID)
                                @if(Model == null)
                                {
                                    @Html.TextBoxFor(x => x.RecursoItemID, new { @class = "form-control col-12", maxlength = "10", placeholder = "Id de recurso", required = "required" })
                                }
                                else
                                {
                                    @Html.TextBoxFor(x => x.RecursoItemID, new { @class = "form-control col-12", maxlength = "10", placeholder = "Id de recurso", @readonly = "readonly" })
                                }
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.RecursoItemStatus)
                                @Html.DropDownListFor(x => x.RecursoItemStatus, null, new { @class = "form-control col-12" })
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                @Html.LabelFor(x => x.RecursoItemNombre)
                                @Html.TextBoxFor(x => x.RecursoItemNombre, new { @class = "form-control col-12", maxlength = "200", placeholder = "Nombre del recurso", required = "required" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Guardar</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
}