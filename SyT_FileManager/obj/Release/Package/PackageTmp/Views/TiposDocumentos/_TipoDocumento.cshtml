@model SyT_FileManager.Models.TipoDocumentoModel

<h5>@ViewBag.ActionType</h5>

@using (Html.BeginForm("_TipoDocumento", "TiposDocumentos", FormMethod.Post))
{
    @Html.HiddenFor(model => model.TipoDocID)
    @Html.Hidden("ActionType")
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.TipoDocNombre)
                @Html.TextBoxFor(model => model.TipoDocNombre, new { @class = "form-control col-12", required = "required" })
            </div>
        </div>
        <div class="col-12 col-lg-6">
            <div class="form-group">
                @Html.LabelFor(model => model.TipoDocPlazo)
                @Html.DropDownListFor(model => model.TipoDocPlazo, null, new { @class = "form-control col-12" })
            </div>
        </div>
        <div class="col-12 col-lg-6">
            <div class="form-group">
                @Html.LabelFor(model => model.TipoDocStatus)
                @Html.DropDownListFor(model => model.TipoDocStatus, null, new { @class = "form-control col-12" })
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-12">
            <button class="btn btn-success"><i class="fa fa-save"></i> Guardar</button>
            <button class="btn btn-danger" type="button" onclick="cancel();"><i class="fa fa-times"></i> Cancelar</button>
        </div>
    </div>
}