@model SyT_FileManager.Models.RoleModel

@using (Html.BeginForm("_Rol", "Roles", FormMethod.Post))
{
    <div class="modal-body">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    @Html.LabelFor(x => x.RolId)
                    @Html.TextBoxFor(x => x.RolId, new { @class = "form-control col-12", maxlength = "20", placeholder = "Identificador del rol", required = "required" })
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    @Html.LabelFor(x => x.RolNombre)
                    @Html.TextBoxFor(x => x.RolNombre, new { @class = "form-control col-12", maxlength = "50", placeholder = "Nombre del rol", required = "required" })
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    @Html.LabelFor(x => x.RolDescripcion)
                    @Html.TextAreaFor(x => x.RolDescripcion, new { @class = "form-control col-12", maxlength = "150", placeholder = "Decripción del rol...", required = "required", rows = "3" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
    </div>
}
