@model SyT_FileManager.Models.BancoModel

<h5>@ViewBag.ActionType</h5>

@using (Html.BeginForm("_Bank", "Bancos", FormMethod.Post))
{
    @Html.HiddenFor(model => model.BancoID)
    @Html.Hidden("ActionType")

    <div class="row">
        <div class="col-12 col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.BancoNombre)
                @Html.TextBoxFor(model => model.BancoNombre, new { @class = "form-control col-12", maxlength = "200", required = "required" })
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.BancoStatus)
                @Html.DropDownListFor(model => model.BancoStatus, null, new { @class = "form-control col-12" })
            </div>
        </div>
    </div>
    <br />
    <button class="btn btn-success"><i class="fa fa-save"></i> Guardar</button>
    <button class="btn btn-danger" type="button" onclick="cancel();"><i class="fa fa-times"></i> Cancelar</button>
}